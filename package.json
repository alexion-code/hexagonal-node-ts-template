{
  "name": "hexagonal-node-ts-template",
  "version": "1.0.0",
  "description": "template for new typescript services based on hexagonal architecture",
  "main": "src/index.js",
  "scripts": {
    "start": "node dist/src/main.js",
    "start:dev": "ts --respawn src/main.ts",
    "test": "npm run test:unit",
    "test:unit": "NODE_ENV=test jest --coverage",
    "prepare": "husky install",
    "lint": "eslint --ignore-path .gitignore . --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "build": "npm run build:clean && npm run build:tsc",
    "build:clean": "rimraf dist; exit 0",
    "build:tsc": "tsc -p tsconfig.prod.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexion-code/hexagonal-node-ts-template.git"
  },
  "keywords": [
    "typescript",
    "hexagonal architecture",
    "skeleton"
  ],
  "author": "agalvez79@gmail.com",
  "license": "MIT",
  "engines": {
    "node": ">=22.9.0",
    "npm": ">=10.9.0"
  },
  "bugs": {
    "url": "https://github.com/alexion-code/hexagonal-node-ts-template/issues"
  },
  "homepage": "https://github.com/alexion-code/hexagonal-node-ts-template#readme",
  "lint-staged": {
    "*.(js|ts)": [
      "npm run lint:fix"
    ]
  },
  "dependencies": {
    "body-parser": "^1.20.3",
    "dotenv": "^16.4.5",
    "express": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.13",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  }
}
